<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="splashtheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground" > @drawable/splashtheme</item>
    </style>
    <style name="NavigationListItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#de000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardUsername" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#de000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Cardbodytext" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#b3000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="PostPhoto" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#de000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
