<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cardview"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:id="@+id/roundtextviewcard"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/CardUsername"
                android:id="@+id/usernamecard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time ago"
                    android:id="@+id/timeagocard"/>

            </LinearLayout>

         </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/imageviewcard"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sampledesc"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/Cardbodytext"
            android:id="@+id/desccard"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1f000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="#00ffffff"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:gravity="end|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:id="@+id/likebtncard"
                android:elevation="0dp"
                android:padding="4dp"/>
<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center_vertical"
                android:id="@+id/likedisplay"/>
-->
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:background="#00ffffff"
                android:src="@drawable/ic_thumb_down_black_24dp"
                android:gravity="end|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:id="@+id/dislikebtncard"
                android:elevation="0dp"/>

